@model Helper.Models.Pharmecy
@{
    ViewBag.Title = "New";
}

<section class="add">
    <h2 class="margin btnstyle formAdd">New Pharmecy</h2>
    @Html.ValidationSummary(true, "Please Fix The Following Erorrs.", new { @class = "center" })
    @using (Html.BeginForm("SavePh", "Pharmecy"))
    {
        <div class="form-group">
            <label for="Name">Name</label>
            @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>

        <div class="form-group">
            <label for="Email">Email</label>
            @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email)
        </div>

        <div class="form-group">
            <label for="phone">phones</label>
            @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Phone)
        </div>

        <div class="form-group">
            <label for="Location">Location</label>
            @Html.TextBoxFor(c => c.Location, new { @class = "form-control" })
        </div>

        @Html.HiddenFor(m => m.id);
        <div>
            <button type="submit" class="btn">Add</button>
            | @Html.ActionLink("Back", "Pharmecy", "Pharmecy", new { @class = "btn" })
        </div>
    }
</section>
