@model Helper.Models.Doners
@{
    ViewBag.Title = "Edit";
}

    <section class="add">
        <h2 class="margin btnstyle formAdd">Edit Donor</h2>
        @Html.ValidationSummary(true, "Please Fix The Following Erorrs.", new { @class = "center" })
        @using (Html.BeginForm("SaveEdit", "Doners"))
        {
            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Name)
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                @Html.TextBoxFor(c => c.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group">
                <label for="phone">phones</label>
                @Html.TextBoxFor(c => c.Phone, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Phone)
            </div>

            <div class="form-group">
                <label for="Location">Location</label>
                @Html.TextBoxFor(c => c.Location, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label for="NoOfOxgen">No Of Oxygen Pipes</label>
                @Html.TextBoxFor(c => c.NoOfOxgen, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NoOfOxgen)
            </div>

            @Html.HiddenFor(m => m.id);
            <div>
                <button type="submit" class="btn">Edit</button>
                | @Html.ActionLink("Back", "Doners", "Doners", new { @class = "btn" })
            </div>
        }
    </section>